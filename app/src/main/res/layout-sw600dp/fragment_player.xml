<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"

    tools:context="net.cchevalier.adnd.spotifystreamer.fragments.PlayerFragment"
    >

    <TextView
        tools:text="Artist"
        android:id="@+id/mp_artist"

        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:gravity="center"/>

    <TextView
        tools:text="Album"
        android:id="@+id/mp_album"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        />

    <ImageView
        android:id="@+id/mp_album_img"
        android:src="@android:drawable/ic_menu_help"
        tools:background="#F09664"

        android:layout_width="300dp"
        android:layout_height="300dp"
        android:padding="5dp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/mp_track"
        tools:text="Track"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mp_current_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            tools:text = "00:00"
            />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="220dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/mp_total_duration"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            tools:text = "88:88"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/button_previous"
            android:src="@android:drawable/ic_media_previous"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />

        <ImageButton
            android:id="@+id/button_play_plause"
            android:src="@android:drawable/ic_media_play"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />

        <ImageButton
            android:id="@+id/button_next"
            android:src="@android:drawable/ic_media_next"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
    </LinearLayout>

</LinearLayout>
