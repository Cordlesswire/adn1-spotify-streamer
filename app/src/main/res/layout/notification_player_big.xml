<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/notification_album_art"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:padding="2dp"
        android:src="@android:drawable/ic_menu_help"
        tools:background="#F09664"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        >

        <TextView
            android:id="@+id/notification_track_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lines="1"
            android:padding="5dp"
            android:textSize="@dimen/abc_text_size_medium_material"
            tools:text="Track name"
            />

        <TextView
            android:id="@+id/notification_artist_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:lines="1"
            android:padding="5dp"
            android:textSize="@dimen/notification_subtext_size"
            tools:text="Artist"
            />

        <TextView
            android:id="@+id/notification_album_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:lines="1"
            android:padding="5dp"
            android:textSize="@dimen/notification_subtext_size"
            tools:text="Album"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/button_previous"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@android:drawable/ic_media_previous" />

            <ImageButton
                android:id="@+id/button_play_plause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_media_pause" />

            <ImageButton
                android:id="@+id/button_next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_media_next" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>